body
  width: 80%
  margin: auto
  margin-top: 15px
  display: flex
  flex-direction: column
  font-family: 'Arial', sans-serif
  text-align: center

a
  text-decoration: none
  color: black

.searchBlock
  display: flex
  justify-content: flex-end
  padding: 2px
  background-color: gray

  > input
    width: 60%

.header
  width: 100%
  display: flex
  flex-direction: column
  font-size: 20px
  background: url('../images/2.jpg') no-repeat center
  background-size: cover
  & .wrapper
    display: flex
    flex-wrap: nowrap
    justify-content: flex-end
  & a
    padding: 15px
    transition: all 0.3s ease-in-out
    &:hover
      background-color: #2c3e50
      color: white
  & .title
    display: flex
    justify-content: center
    padding-top: 20px
    padding-bottom: 10px

.mainDns
  display: flex
  flex-direction: column
  width: 80%
  align-self: center
  padding: 0
  margin-top: 5px
  justify-content: stretch
  & .dnsHeader
    display: flex
    flex-direction: column
    & h3
      align-self: center

img
  width: 100%
  height: 150px
  background-color: gray
  transition: all 0.3s ease-in-out
  &:hover
    transform: scale(1.05)

.column
  display: flex
  flex-direction: column
  margin: 10px
  padding: 5px
  text-align: justify
  width: 100%
  & .row
    display: flex
    flex-direction: column
    background-color: papayawhip
    margin-bottom: 5px
    padding: 5px
    transition: all 0.3s ease-in-out
    &:hover
      background-color: #2c3e50
      color: white
  & .row-wrapper
    display: flex
    flex-direction: row
    align-items: stretch

.rowTitle
  width: 50%
  align-self: center
  height: 100%
  display: flex
  align-items: center
  padding-left: 5px
  font-size: 20px

.column-wrapper
  display: inline-flex

.rowImg
  width: 50%
  height: 40px
  align-self: center
  background: gray

.row-text
  overflow: hidden
  display: -webkit-box
  -webkit-line-clamp: 2
  -webkit-box-orient: vertical
  margin-top: 0
  margin-bottom: 0

@media all and (max-width: 1000px)
  .header
    & .wrapper
      display: block
      flex-wrap: wrap
      column-count: 2
    & .wrapper
      break-inside: avoid

  .column-wrapper
    flex-direction: column