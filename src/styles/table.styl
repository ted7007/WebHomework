body
  font-family: 'Roboto', sans-serif
  font-size: 16px
  background: #f4f4f4
  color: #333

// Стили для таблицы
table
  border-collapse: collapse
  border: 1px solid #ddd
  width: 100%

th, td
  border: 1px solid #ddd
  padding: 10px
  text-align: center

// Стили для поля сортировки
.sortField
  margin-bottom: 15px

// Стили для кнопки submit
input[type="submit"]
  background: linear-gradient(to right, #ff416c, #ff4b2b)
  color: white
  padding: 10px 20px
  border: none
  border-radius: 5px
  cursor: pointer
  transition: all 0.3s ease

input[type="submit"]:hover
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1)

@media screen and (max-width: 768px)
  table
    font-size: 14px

  th, td
    padding: 5px

  .sortField
    margin-bottom: 10px

  input[type="submit"]
    padding: 8px 16px