.market-header
  color: #2c3e50
  font-size: 36px
  text-transform: uppercase
  letter-spacing: 2px
  margin-bottom: 20px

.market-image
  border-radius: 10px
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.3)
  transition: transform 0.3s ease-in-out

.market-image:hover
  transform: scale(1.05)

.market-description
  color: #34495e
  font-size: 20px
  line-height: 1.6
  margin-top: 20px